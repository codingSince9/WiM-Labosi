<!DOCTYPE html>
<html>

<head>
    <title>Flower power!</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="./images/flower-icon.png"/>
    <link rel="stylesheet" type="text/css" href="./vendor/normalize.css">
    <link rel="stylesheet" type="text/css" href="./styles/main.css">
    <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
</head>

<body class="content">

<%- include(`partials/header`); %>

<main class="main">
    <section class="section primary-color-bg">
        <div class="container">
            <h1 class="decorated-title font-secondary main-color">User Profile</h1>
            <h3 class="infobox-title main-color-emphasized">
                User name: <%= user.user_name %>
            </h3>
            <h3 class="infobox-title main-color-emphasized">
                First name: <%= user.first_name %>
            </h3>
            <h3 class="infobox-title main-color-emphasized">
                Last name: <%= user.last_name %>
            </h3>
            <h3 class="infobox-title main-color-emphasized">
                E-mail: <%= user.email %>
            </h3>
        </div>
        <div class="container">
            <div class="separator"></div>
        </div>
        <section class="section container">
            <h1 class="decorated-title font-secondary main-color">Addresses</h1>
            <h3 class="infobox-title main-color-emphasized">
                Name: <%= address.name %>
            </h3>
            <h3 class="infobox-title main-color-emphasized">
                Street: <%= address.street %>
            </h3> 
            <h3 class="infobox-title main-color-emphasized">
                Postcode: <%= address.code %>
            </h3>
            <h3 class="infobox-title main-color-emphasized">
                City: <%= address.town %>
            </h3>
            <h3 class="infobox-title main-color-emphasized">
                Country: <%= address.country %>
            </h3> 
        </section>
        <div class="container">
            <div class="separator"></div>
        </div>
        <section class="section container">
            <h1 class="decorated-title font-secondary main-color">Past Orders</h1>
            <% if ((!orders) || (orders.length == 0)) { %>
                <div class="centered-container">
                    <h2 class="decorated-title font-secondary main-color">No orders yet</h2>
                </div>
            <% } else { %>
                <div class="cart-row">
                    <div class="cart-box-title font-secondary main-color-emphasized">Date</div>
                    <div class="cart-box-title font-secondary main-color-emphasized"></div>
                    <div class="cart-box-title font-secondary main-color-emphasized"></div>
                    <div class="cart-box-title font-secondary main-color-emphasized">Amount</div>
                </div>
                <% for (order of orders) { %>
                    <% if( order && order.date && order.cart ) { %>
                <div class="cart-row">
                    <div class="cart-box-title font-secondary main-color-emphasized"><%= order.date.toISOString().slice(0, 10) %></div>
                    <div class="cart-box-title font-secondary main-color-emphasized"></div>
                    <div class="cart-box-title font-secondary main-color-emphasized"></div>
                    <div class="cart-box-title font-secondary main-color-emphasized"><%= JSON.parse(order.cart)["totalAmount"] %></div>
                </div>
                    <% } %>
                <% } %>
            <% } %>


        </section>
        <div class="container">
            <div class="separator"></div>
        </div>
    </section>
</main>

<%- include(`partials/footer`); %>

</body>

</html>
