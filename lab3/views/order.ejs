<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="./images/flower-icon.png" />
    <link rel="stylesheet" type="text/css" href="./vendor/normalize.css">
    <link rel="stylesheet" type="text/css" href="./styles/main.css">
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
</head>

<body class="content body-header-fixed">

    <%- include(`partials/header`); %>

    <main class="main">

        <% for (let category of categories) { %>
        <section class="section secondary-color-bg">
            <div class="centered-container">
                <h1 class="decorated-title font-secondary main-color">
                    <span class="main-color-emphasized"><%= category.name %></span>
                    Inventory</h1>
                <div class="separator"></div>
                <% let counter = 0
                for (let item of items) { 
                    if (item.categoryid == category.id) { 
                        counter += 1
                    } 
                } 
                if (counter == 0) { %>
                <h2 class="decorated-title font-secondary main-color">No items in this category</h2>
                <% } %>
            </div>
            <div class="gallery">
                <% for (let item of items) { %>
                <% if (category.id == item.categoryid) { %>
                <div class="photo-box" data-id="">
                    <img class="photo-box-image" src="<%= item.imageurl %>"></img>
                    <div class="photo-box-title font-secondary main-color-emphasized"><%= item.name %></div>
                </div>
                <% } %>
                <% } %>
            </div>
        </section>
        <% } %>

    </main>

    <%- include(`partials/footer`); %>

</body>

</html>